{
  "global": {
    "version": 0.1
  },
  
  "httpClient": {
    "tokenKey": "myvue3app-token",
    "clientType": "fetch"
  },
  
  "apiClient": {
    "type": "live"
  },

  "items": {
    "apiClientOptions": {
      "endpoints": {
        "fetchItems": "/jsonserver/items"
      },
      "mockDelay": 0
    }
  },

  "localization": {
    "apiClientOptions": {
      "endpoints": {
        "fetchTranslation": "/api/[namespace]_[key]"
      },
      "mockDelay": 250
    },
    "locales": [
      { "key": "en-US", "isDefault": true },
      { "key": "it-IT", "isDefault": false },
      { "key": "fr-FR", "isDefault": false },
      { "key": "es-ES", "isDefault": false }
    ],
    "localStorageCache": { 
      "enabled": true, 
      "expirationInMinutes": 60
    }
  }
}
